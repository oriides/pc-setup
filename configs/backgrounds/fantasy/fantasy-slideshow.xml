<background>
  <starttime>
    <year>2022</year>
    <month>05</month>
    <day>24</day>
    <hour>8</hour>
    <minute>00</minute>
    <second>00</second>
  </starttime>
  <!-- This animation will start at 8 AM. -->

  <!-- We start with day at 8 AM. It will remain up for 7 hours. -->
  <static>
    <duration>25200.0</duration>
    <file>/usr/share/backgrounds/fantasy/day.png</file>
  </static>

  <!-- Day ended and starts to transition to night at 3 PM. The transition lasts for 3 hours, ending
  at 6 PM. -->
  <transition type="overlay">
    <duration>10800.0</duration>
    <from>/usr/share/backgrounds/fantasy/day.png</from>
    <to>/usr/share/backgrounds/fantasy/evening.png</to>
  </transition>

  <!-- It's 6 PM, we're showing the evening till 8 PM. -->
  <static>
    <duration>7200.0</duration>
    <file>/usr/share/backgrounds/fantasy/evening.png</file>
  </static>

  <!-- It's 8 PM, and we're starting to transition to night. Transition completes at 10 PM. -->
  <transition type="overlay">
    <duration>7200.0</duration>
    <from>/usr/share/backgrounds/fantasy/evening.png</from>
    <to>/usr/share/backgrounds/fantasy/night.png</to>
  </transition>

  <!-- It's 10 PM, we're showing the evening till 6 AM. -->
  <static>
    <duration>28800.0</duration>
    <file>/usr/share/backgrounds/fantasy/night.png</file>
  </static>

  <!-- It's 6 AM, and we're starting to transition to day. Transition completes at 8 AM. -->
  <transition type="overlay">
    <duration>7200.0</duration>
    <from>/usr/share/backgrounds/fantasy/night.png</from>
    <to>/usr/share/backgrounds/fantasy/day.png</to>
  </transition>

</background>